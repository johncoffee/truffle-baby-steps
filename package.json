{
  "name": "truffle-baby-steps",
  "version": "2.0.0",
  "description": "This is a framework for getting started with Solidity, deployment of contracts, and unit testing. Basically what Truffle  does best.",
  "main": "index.js",
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/fs-extra": "^5.0.5",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.14.4",
    "bignumber.js": "^7.2.1",
    "fs-extra": "^7.0.1",
    "ganache-cli": "^6.4.2",
    "truffle": "^5.0.12",
    "truffle-typings": "git+https://github.com/johncoffee/truffle-typings.git",
    "typechain": "^0.3.14",
    "typescript": "^3.4.3",
    "web3": "^1.0.0-beta.52"
  },
  "scripts": {
    "test-repo": "npm run clear && npm i && npm run build && npm test",
    "test": "cd ethereum; truffle test",
    "build": "cd ethereum; truffle compile && npm run type-contracts && npm run compile-tests",
    "ganache": "ganache-cli -p 7545",
    "type-contracts": "cd ethereum; node ../node_modules/typechain/dist/cli/cli.js --target=truffle --outDir=build/contract-interfaces \"./build/**/*.json\"",
    "compile-tests": "node node_modules/typescript/bin/tsc --project ./ethereum/ -p ./tsconfig.json",
    "compile-tools": "node node_modules/typescript/bin/tsc --project ./tools/ -p ./tsconfig.json",
    "clear": "git clean -dfx -e .idea"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johncoffee/truffle-baby-steps.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/johncoffee/truffle-baby-steps/issues"
  },
  "homepage": "https://github.com/johncoffee/truffle-baby-steps#readme"
}
