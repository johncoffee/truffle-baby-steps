{
  "name": "truffle-baby-steps",
  "version": "4.0.0",
  "description": "This is a framework for getting started with Solidity, deployment of contracts, and unit testing. Basically what Truffle  does best.",
  "main": "index.js",
  "dependencies": {
    "@types/chai": "4.2.6",
    "@types/fs-extra": "5.1.0",
    "@types/mocha": "5.2.7",
    "@types/node": "12.12.15",
    "bignumber.js": "9.0.0",
    "fs-extra": "8.1.0",
    "ganache-cli": "6.7.0",
    "truffle": "5.1.3",
    "truffle-typings": "1.0.8",
    "typechain": "1.0.3",
    "typechain-target-truffle": "1.0.2",
    "typescript": "3.7.3",
    "web3": "1.2.4"
  },
  "scripts": {
    "watch": "cd ethereum; nodemon --delay 0.77 -e js --exec 'truffle test'",
    "test": "cd ethereum; truffle test",
    "build": "cd ethereum; truffle compile && npm run type-contracts && npm run compile-tests",
    "ganache": "ganache-cli -p 7545",
    "type-contracts": "cd ethereum; typechain --target=truffle --outDir=build/contract-interfaces \"./build/**/*.json\"",
    "compile-tests": "tsc --project ./ethereum/ -p ./tsconfig.json",
    "compile-tools": "tsc --project ./tools/ -p ./tsconfig.json",
    "clear": "git clean -dfx -e .idea"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johncoffee/truffle-baby-steps.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/johncoffee/truffle-baby-steps/issues"
  },
  "homepage": "https://github.com/johncoffee/truffle-baby-steps#readme",
  "optionalDependencies": {
    "nodemon": "^1.19.4"
  }
}
